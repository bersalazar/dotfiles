[user]
    name = Bernardo Salazar

[includeIf "gitdir:~/pers/"]
    path = ~/.gitconfig-personal
[includeIf "gitdir:~/proj/"]
    path = ~/.gitconfig-work

[core]
    autocrlf = input
    attributesfile = /Users/bernardosalazar/.gitattributes
    editor = /usr/local/bin/nvim
    pager = delta

[delta]
    syntax-theme = Monokai Extended
    side-by-side = false
    line-numbers = true

[interactive]
    diffFilter = delta --color-only --features=interactive

[pull]
    rebase = true

[commit]
    gpgsign = true

[url "ssh://git@github.com"]
    insteadOf = https://github.com
    insteadof = git://github.com
    insteadOf = https://github.com

[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f

[gpg]
    program = gpg

[branch]
    sort = committerdate

[merge]
    conflictstyle = diff3

[trailer "Co-Authored-By"]
    where = after
    ifExists = addIfDifferent
[merge "npm-merge-driver"]
    name = Automatically merge npm lock files
    driver = npx npm-merge-driver merge %A %O %B %P
[merge "yarn-merge-driver"]
    name = Automatically merge yarn lock files
    driver = npx npm-merge-driver merge %A %O %B %P -c yarn
